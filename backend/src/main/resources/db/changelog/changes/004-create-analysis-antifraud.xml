<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="004-create-analysis-table" author="hr-assistant">
        <createTable tableName="analysis">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="interview_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="details_json" type="TEXT"/>
            <column name="overall_score" type="DECIMAL(4,3)"/>
            <column name="competency_scores_json" type="TEXT"/>
            <column name="strengths_json" type="TEXT"/>
            <column name="weaknesses_json" type="TEXT"/>
            <column name="recommendation" type="VARCHAR(50)"/>
            <column name="recommendation_reason" type="TEXT"/>
            <column name="processing_time_ms" type="BIGINT"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="analysis"
                baseColumnNames="interview_id"
                constraintName="fk_analysis_interview"
                referencedTableName="interviews"
                referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="005-create-antifraud-table" author="hr-assistant">
        <createTable tableName="antifraud">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="interview_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="flags_json" type="TEXT"/>
            <column name="liveness_score" type="DECIMAL(4,3)"/>
            <column name="face_match_score" type="DECIMAL(4,3)"/>
            <column name="voice_match_score" type="DECIMAL(4,3)"/>
            <column name="text_ai_score" type="DECIMAL(4,3)"/>
            <column name="visibility_events_count" type="INTEGER" defaultValueNumeric="0"/>
            <column name="heartbeat_gaps" type="INTEGER" defaultValueNumeric="0"/>
            <column name="devtools_detected" type="BOOLEAN" defaultValueBoolean="false"/>
            <column name="tab_switches_count" type="INTEGER" defaultValueNumeric="0"/>
            <column name="window_blur_count" type="INTEGER" defaultValueNumeric="0"/>
            <column name="overall_fraud_score" type="DECIMAL(4,3)"/>
            <column name="fraud_status" type="VARCHAR(50)"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="antifraud"
                baseColumnNames="interview_id"
                constraintName="fk_antifraud_interview"
                referencedTableName="interviews"
                referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>


