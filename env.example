# ===================================================================
# HR Assistant Environment Variables Template
# ===================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control

# ===================================================================
# Database Configuration
# ===================================================================
DB_URL=jdbc:postgresql://localhost:5432/hr_assistant
DB_USERNAME=hr_user
DB_PASSWORD=your_secure_password_here

# ===================================================================
# Redis Configuration
# ===================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ===================================================================
# RabbitMQ Configuration
# ===================================================================
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VIRTUAL_HOST=/

# ===================================================================
# MinIO/S3 Configuration
# ===================================================================
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=your_minio_access_key
MINIO_SECRET_KEY=your_minio_secret_key
MINIO_BUCKET_NAME=hr-assistant-media
MINIO_REGION=us-east-1

# ===================================================================
# Security Configuration
# ===================================================================
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_here_at_least_256_bits
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# ===================================================================
# ML Models Configuration
# ===================================================================
ML_MODELS_PATH=/opt/models
ML_WHISPER_MODEL=whisper-small.onnx
ML_EMBEDDINGS_MODEL=paraphrase-multilingual-MiniLM-L12-v2.onnx
ML_CLASSIFIER_MODEL=rubert-classifier.onnx
ML_VOICE_VERIFICATION_MODEL=ecapa-tdnn.onnx
ML_FACE_RECOGNITION_MODEL=facenet.onnx
ML_LIVENESS_MODEL=liveness-detector.onnx
ML_AI_DETECTOR_MODEL=ai-text-detector.onnx

# ===================================================================
# Antifraud Configuration
# ===================================================================
ANTIFRAUD_LIVENESS_WEIGHT=0.25
ANTIFRAUD_FACE_MATCH_WEIGHT=0.2
ANTIFRAUD_VOICE_MATCH_WEIGHT=0.2
ANTIFRAUD_TEXT_AI_WEIGHT=0.2
ANTIFRAUD_VISIBILITY_WEIGHT=0.1
ANTIFRAUD_DEVTOOLS_WEIGHT=0.05
ANTIFRAUD_REJECT_THRESHOLD=0.85
ANTIFRAUD_REVIEW_THRESHOLD=0.6

# ===================================================================
# LLM Provider Configuration
# ===================================================================
LLM_PROVIDER=openai
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro
LLAMA_API_URL=http://localhost:11434/api/generate
LLAMA_MODEL=llama3

# ===================================================================
# CORS Configuration
# ===================================================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*

# ===================================================================
# File Upload Configuration
# ===================================================================
MAX_FILE_SIZE=100MB
MAX_REQUEST_SIZE=100MB

# ===================================================================
# Cache Configuration
# ===================================================================
CACHE_TTL_SECONDS=3600

# ===================================================================
# Rate Limiting
# ===================================================================
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_CAPACITY=200

# ===================================================================
# SSL Configuration (Production)
# ===================================================================
SSL_KEYSTORE_PASSWORD=your_ssl_keystore_password

# ===================================================================
# Development/Testing
# ===================================================================
# Set to 'dev' for development, 'prod' for production
SPRING_PROFILES_ACTIVE=dev